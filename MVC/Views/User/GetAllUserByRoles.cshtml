@model Dictionary<string, List<MVC.Models.DTOs.UserDetailDTO>>

<h2>Kullanıcılar Rollere Göre</h2>

@if (Model != null && Model.Count > 0)
{
    @foreach (var roleGroup in Model)
    {
        <h3>@roleGroup.Key Rolündeki Kullanıcılar</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in roleGroup.Value)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td><a class="btn btn-warning"  asp-action="UpdateRole" asp-route-id="@user.Id">Role Değiştir</a><a class="btn btn-success" asp-action="GetUserDetails" asp-route-userId="@user.Id">Profil Detayı</a>
                            @if (user.Role == "Admin")
                            {
                                <a class="btn btn-success" asp-action="UpdateUser" asp-route-userId="@user.Id">Profil Güncelle</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <p>Kullanıcı bulunamadı.</p>
}