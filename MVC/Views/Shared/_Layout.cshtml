    <script>
        function fetchSalesData(timeFrame) {
            const today = new Date();
            let startDate, endDate;

            // Tarihleri hesapla
            if (timeFrame === 'today') {
                startDate = new Date(today.getFullYear(), today.getMonth(), today.getDate());
                endDate = new Date(today.getFullYear(), today.getMonth(), today.getDate() + 1);
                $("#time-frame").text("| Today");
            } else if (timeFrame === 'month') {
                startDate = new Date(today.getFullYear(), today.getMonth(), 1);
                endDate = new Date(today.getFullYear(), today.getMonth() + 1, 0);
                $("#time-frame").text("| This Month");
            } else if (timeFrame === 'year') {
                startDate = new Date(today.getFullYear(), 0, 1);
                endDate = new Date(today.getFullYear() + 1, 0, 0);
                $("#time-frame").text("| This Year");
            }

            // Tarih formatlarını hazırla
            const startDateString = startDate.toLocaleDateString('en-CA'); // YYYY-MM-DD formatı
            const endDateString = endDate.toLocaleDateString('en-CA'); // YYYY-MM-DD formatı

            // API çağrısı
            $.ajax({
                url: `http://localhost:5211/api/Report/GetOfferCartSummaryReport`,
                method: 'GET',
                data: {
                    startDate: startDateString,
                    endDate: endDateString
                },
                success: function (data) {

                    // Toplam amount ve satış sayısını hesapla
                    const totalAmount = data.reduce((total, offerCart) => total + offerCart.amount, 0); // amount'ları topla
                    const totalPriceP = data.reduce((totalP, offerCart) => totalP + offerCart.totalPrice, 0); // totalPrica'ları topla
                    const salesCount = data.length; // Satış sayısını al

                    $("#sales-count").text(totalAmount); // Toplam amount'ı göster
                    $("#revenue-amount").text(totalPriceP); // Toplam totalPrice'ı göster
                    $("#person-count").text(salesCount); // Toplam Sipariş oluşturan müşteri sayısını göster

                    // Önceki dönemin satış sayısını al ve yüzdeyi hesapla
                    // getPreviousSalesCount(timeFrame).then(previousSalesCount => {
                    //     const percentageIncrease = calculatePercentageIncrease(previousSalesCount, salesCount);
                    //     $("#percentage-increase").text(percentageIncrease + '%');
                    // });
                },
                error: function (xhr, status, error) {
                    console.error("API error:", error);
                }
            });
        }

        // Geçmiş verileri almak için bir fonksiyon
        async function getPreviousSalesCount(timeFrame) {
            const today = new Date();
            let previousStartDate, previousEndDate;

            if (timeFrame === 'today') {
                // Bir gün öncesinin başlangıç ve bitiş tarihleri (sadece gün)
                previousStartDate = new Date(today.getFullYear(), today.getMonth(), today.getDate()) // Geçen ayın ilk günü
                previousEndDate = new Date(today.getFullYear(), today.getMonth(), today.getDate() + 1) // Geçen ayın son günü
            } else if (timeFrame === 'month') {
                previousStartDate = new Date(today.getFullYear(), today.getMonth() - 1, 1); // Geçen ayın ilk günü
                previousEndDate = new Date(today.getFullYear(), today.getMonth(), 0); // Geçen ayın son günü
            } else if (timeFrame === 'year') {
                previousStartDate = new Date(today.getFullYear() - 1, 0, 1); // Geçen yılın ilk günü
                previousEndDate = new Date(today.getFullYear(), 0, 0); // Geçen yılın son günü
            }

            // Tarihleri UTC formatında MM-DD-YYYY olarak ayarlama
            const previousStartDateString = formatDateToMMDDYYYYUTC(previousStartDate);
            const previousEndDateString = formatDateToMMDDYYYYUTC(previousEndDate);


            return $.ajax({
                url: `http://localhost:5211/api/Report/GetOfferCartSummaryReport`,
                method: 'GET',
                data: {
                    startDate: previousStartDateString,
                    endDate: previousEndDateString
                },
                success: function (data) {
                    // Önceki dönemden gelen amount'ları topla
                    const previousTotalAmount = data.reduce((total, offerCart) => total + offerCart.amount, 0);
                    return previousTotalAmount; // API'den gelen önceki total amount
                },
                error: function (xhr, status, error) {
                    console.error("API error:", error);
                    return 0; // Hata durumunda 0 dön
                }
            });
        }

        // Tarih formatlarını hazırlamak için fonksiyon
        function formatDateToMMDDYYYYUTC(date) {
            const month = String(date.getUTCMonth() + 1).padStart(2, '0'); // Ay (01-12)
            const day = String(date.getUTCDate()).padStart(2, '0');         // Gün (01-31)
            const year = date.getUTCFullYear();                             // Yıl (YYYY)
            return `${month}-${day}-${year}`;                              // MM-DD-YYYY formatı
        }

