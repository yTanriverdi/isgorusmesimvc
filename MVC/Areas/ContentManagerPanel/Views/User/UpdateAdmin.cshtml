@model MVC.Areas.AdminPanel.Models.VMs.User.UpdateUserVM

@{
    ViewData["Title"] = "UpdateAdmin";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Update Admin Information</h2>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Admin Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateAdmin" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="Id" class="form-control" type="hidden" />
                        <span asp-validation-for="Id" class="text-danger"></span>

                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label fw-bold">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" class="control-label fw-bold">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="form-text text-muted">You cannot change the admin email.</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label fw-bold">New Password</label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
