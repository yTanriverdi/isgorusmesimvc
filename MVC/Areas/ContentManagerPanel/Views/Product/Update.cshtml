@using MVC.Areas.AdminPanel.Models.VMs.Product
@model UpdateProductVM

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>UpdateProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UpdateProductDTO.ProductId" class="form-control" type="hidden" />
                <span asp-validation-for="UpdateProductDTO.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateProductDTO.ProductName" class="control-label"></label>
                <input asp-for="UpdateProductDTO.ProductName" class="form-control" />
                <span asp-validation-for="UpdateProductDTO.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateProductDTO.Description" class="control-label"></label>
                <input asp-for="UpdateProductDTO.Description" class="form-control" />
                <span asp-validation-for="UpdateProductDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateProductDTO.Price" class="control-label"></label>
                <input asp-for="UpdateProductDTO.Price" class="form-control" />
                <span asp-validation-for="UpdateProductDTO.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateProductDTO.MaterialId" class="control-label"></label>
                <select asp-for="UpdateProductDTO.MaterialId" class="form-select" asp-items="@Model.Materials"></select>
                <span asp-validation-for="UpdateProductDTO.MaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateProductDTO.CategoryId" class="control-label"></label>
                <select asp-for="UpdateProductDTO.CategoryId" class="form-select" asp-items="@Model.Categories"></select>
                <span asp-validation-for="UpdateProductDTO.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllProducts" asp-controller="Product" asp-area="ContentManagerPanel">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
