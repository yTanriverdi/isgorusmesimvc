@using MVC.Areas.AdminPanel.Models.VMs.Category
@model GetAllProductsOfCategoryVM

@{
    ViewData["Title"] = "Kategori: " + Model.CategoryName + " Ürünleri";
}

<h1>Ürünler</h1>

<h4>@Model.CategoryName</h4>
<hr />

@if (Model.Products != null && Model.Products.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Products.First().ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.Products.First().Description)</th>
                <th>@Html.DisplayNameFor(model => model.Products.First().Price)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@Html.DisplayFor(m => product.ProductName)</td>
                    <td>@Html.DisplayFor(m => product.Description)</td>
                    <td>@Html.DisplayFor(m => product.Price)</td> <!-- Para birimini belirtmek için -->
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", "Product", new { id = product.ProductId }, null) |
                        @Html.ActionLink("Sil", "Delete", "Product", new { id = product.ProductId }, new { onclick = "return confirm('Silmek istediğinize emin misiniz?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <strong>Uyarı!</strong> Bu kategoriye ait ürün bulunmamaktadır.
    </div>
}

<div>
    <a asp-action="GetAllCategories" asp-controller="Category" asp-area="AdminPanel" class="btn btn-primary">Geri Dön</a>
</div>