@using MVC.Areas.AdminPanel.Models.VMs.Product
@model CreateProductVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreateProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AddProductDTO.ProductName" class="control-label"></label>
                <input asp-for="AddProductDTO.ProductName" class="form-control" />
                <span asp-validation-for="AddProductDTO.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddProductDTO.Description" class="control-label"></label>
                <input asp-for="AddProductDTO.Description" class="form-control" />
                <span asp-validation-for="AddProductDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddProductDTO.Price" class="control-label"></label>
                <input asp-for="AddProductDTO.Price" class="form-control" />
                <span asp-validation-for="AddProductDTO.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddProductDTO.MaterialId" class="control-label"></label>
                <select class="form-select" asp-for="AddProductDTO.MaterialId" asp-items="Model.Materials"></select>
                <span asp-validation-for="AddProductDTO.MaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddProductDTO.CategoryId" class="control-label"></label>
                <select class="form-select" asp-for="AddProductDTO.CategoryId" asp-items="Model.Categories"></select>
                <span asp-validation-for="AddProductDTO.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllProducts" asp-controller="Product" asp-area="AdminPanel">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
