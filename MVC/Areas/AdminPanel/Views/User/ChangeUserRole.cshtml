@using MVC.Areas.AdminPanel.Models.VMs.User

@model UserDetailVM

<h2>Kullanıcı Rolünü Değiştir</h2>

<form asp-action="ChangeUserRole" method="post">
    <div>
        <label for="FirstName">Ad</label>
        <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" readonly />
    </div>
    <div>
        <label for="LastName">Soyad</label>
        <input type="text" id="LastName" name="LastName" value="@Model.LastName" readonly />
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" value="@Model.Email" readonly />
    </div>
    <div class="form-group">
        <label asp-for="SelectedRoleId" class="control-label"></label>
        <select class="form-select" asp-for="SelectedRoleId" asp-items="@ViewBag.Roles"></select>
        <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit">Güncelle</button>
</form>

